<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:angle="-90"
                android:endColor="@color/base_header_color"
                android:startColor="@color/base_header_color" />
            <size
                android:width="@dimen/_15sdp"
                android:height="@dimen/_15sdp" />
            <corners android:radius="@dimen/_1sdp" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:angle="-90"
                    android:endColor="@color/range_bar_color"
                    android:startColor="@color/range_bar_color" />
                <corners android:radius="@dimen/_2sdp" />
            </shape>
        </clip>
    </item>
</layer-list>