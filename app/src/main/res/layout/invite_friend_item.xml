<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/base_bottom_color">

    <com.rol.widgets.CustomTextView
        android:id="@+id/friend_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/_12sdp"
        android:paddingTop="@dimen/_13sdp"
        android:paddingBottom="@dimen/_13sdp"
        android:text="@string/friend_name"
        android:textColor="@color/gray"
        android:textSize="@dimen/_12ssp"
        app:customFont="Helvetica_light.ttf" />


    <CheckBox
        android:id="@+id/select_frd_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/_10sdp"
        android:button="@drawable/checkbox_selector_two"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>