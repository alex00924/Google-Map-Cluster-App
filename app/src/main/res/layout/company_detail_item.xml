<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_13sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_13sdp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/task_cover_img"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_90sdp"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/delete_button"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_below="@id/task_cover_img"
                android:layout_alignRight="@id/task_cover_img"
                android:layout_marginTop="@dimen/_minus10sdp"
                android:layout_marginRight="@dimen/_minus10sdp"
                android:src="@mipmap/del" />


        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_4sdp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/task_img"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/create" />

                <com.rol.widgets.CustomTextView
                    android:id="@+id/task_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_toRightOf="@id/task_img"
                    android:text="@string/task_name"
                    android:textColor="@color/base_header_color"
                    android:textSize="@dimen/_13ssp"
                    app:customFont="Helvetica_light.ttf" />

                <LinearLayout
                    android:id="@+id/edit_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal"
                    android:visibility="gone">


                    <ImageView
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/edit_ic" />

                    <com.rol.widgets.CustomTextView
                        android:id="@+id/edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:text="@string/edit"
                        android:textColor="@color/base_header_color"
                        android:textSize="@dimen/_11ssp"
                        app:customFont="Helvetica_light.ttf" />


                </LinearLayout>


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_4sdp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/user_image"
                    android:layout_width="@dimen/_13sdp"
                    android:layout_height="@dimen/_13sdp"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/name" />

                <com.rol.widgets.CustomTextView
                    android:id="@+id/organiser_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_toRightOf="@id/user_image"
                    android:text="@string/name"
                    android:textColor="@color/radio_text_color"
                    android:textSize="@dimen/_11ssp"
                    app:customFont="Helvetica_light.ttf" />

                <com.rol.widgets.CustomTextView
                    android:id="@+id/task_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:text="@string/cancel"
                    android:textColor="@color/red_color"
                    android:textSize="@dimen/_11ssp"
                    android:visibility="visible"
                    app:customFont="Helvetica_light.ttf" />

                <LinearLayout
                    android:id="@+id/delete_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal"
                    android:visibility="gone">


                    <ImageView
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/delete" />

                    <com.rol.widgets.CustomTextView
                        android:id="@+id/delete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:text="@string/delete"
                        android:textColor="@color/base_header_color"
                        android:textSize="@dimen/_11ssp"
                        app:customFont="Helvetica_light.ttf" />


                </LinearLayout>


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_4sdp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/cal_image"
                    android:layout_width="@dimen/_13sdp"
                    android:layout_height="@dimen/_13sdp"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/caleneder" />

                <com.rol.widgets.CustomTextView
                    android:id="@+id/date_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_toRightOf="@id/cal_image"
                    android:text="@string/date_time"
                    android:textColor="@color/radio_text_color"
                    android:textSize="@dimen/_11ssp"
                    app:customFont="Helvetica_light.ttf" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:src="@mipmap/help" />

                    <com.rol.widgets.CustomTextView
                        android:id="@+id/count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:text="@string/total"
                        android:textColor="@color/base_header_color"
                        android:textSize="@dimen/_11ssp"
                        app:customFont="Helvetica_light.ttf" />


                </LinearLayout>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/loc_image"
                    android:layout_width="@dimen/_13sdp"
                    android:layout_height="@dimen/_13sdp"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/location" />

                <com.rol.widgets.CustomTextView
                    android:id="@+id/location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_toLeftOf="@id/distance_layout"
                    android:layout_toRightOf="@id/loc_image"
                    android:text="@string/location_here"
                    android:textColor="@color/radio_text_color"
                    android:textSize="@dimen/_11ssp"
                    app:customFont="Helvetica_light.ttf" />

                <LinearLayout
                    android:id="@+id/distance_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:src="@mipmap/loc" />

                    <com.rol.widgets.CustomTextView
                        android:id="@+id/distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:text="@string/distance_text"
                        android:textColor="@color/base_header_color"
                        android:textSize="@dimen/_11ssp"
                        app:customFont="Helvetica_light.ttf" />


                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>